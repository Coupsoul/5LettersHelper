<Window x:Class="_5LettersHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5LettersHelper"
        mc:Ignorable="d"
        Title="5 Letters Helper" Height="740" Width="1200"
        WindowStartupLocation="CenterScreen" MinHeight="740" MinWidth="1200">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LogoAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ShimmerAnimation}"/>
        </EventTrigger>
    </Window.Triggers>


    <Grid>
        <Grid Name="Background_Grid">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/used-stainless-steel2_roughness.png" 
                            TileMode="Tile" 
                            Viewport="0,0,512,512" ViewportUnits="Absolute" 
                            Opacity="0.8" />
            </Grid.Background>

            <Border>
                <Border.Background>
                    <RadialGradientBrush Center="0.5,0.65" GradientOrigin="0.5,0.7" RadiusX="0.7" RadiusY="0.9">
                        <GradientStop Color="#8095A5B1" Offset="0.4" />
                        <GradientStop Color="#800C1B25" Offset="0.9" />
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"></RowDefinition>
                <RowDefinition Height="1.1*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="1.2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="0.18*" ></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Grid x:Name="Logo" Grid.Row="0" Grid.ColumnSpan="3"
                  HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock x:Name="Back" Text="5  LETTERS  HELPER"
                           FontFamily="/Fonts/#The 2K12"
                           FontSize="56"
                           Foreground="#021A01"
                           Margin="1.5,1.5,0,0"
                           Opacity="0.7"/>

                <!--Основной текст со свечением-->
                <TextBlock x:Name="GlowingText"
                           Text="5  LETTERS  HELPER"
                           FontFamily="/Fonts/#The 2K12"
                           FontSize="56"
                           Foreground="#9AFFB8" Opacity="0">
                    <TextBlock.Effect>
                        <DropShadowEffect x:Name="GlowEffect"
                                          Color="#63FF63"
                                          ShadowDepth="0"
                                          BlurRadius="11"
                                          Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!--Лёгкий внешний ореол-->
                <TextBlock x:Name="OuterGlowingText"
                           Text="5  LETTERS  HELPER"
                           FontFamily="/Fonts/#The 2K12"
                           FontSize="56"
                           Foreground="#9AFFB8" Opacity="0">
                    <TextBlock.Effect>
                        <DropShadowEffect x:Name="OuterGlowEffect"
                                          Color="#63FFE5"
                                          ShadowDepth="0"
                                          BlurRadius="42"
                                          Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Переливающийся слой -->
                <TextBlock Text="5  LETTERS  HELPER"
                           FontFamily="/Fonts/#The 2K12"
                           FontSize="56"
                           Foreground="#FFFFFF"
                           Opacity="0.8">
                    <TextBlock.OpacityMask>
                        <LinearGradientBrush x:Name="ShimmerBrush"
                                            StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00FFFFFF" Offset="-1.0" x:Name="Stop1"/>
                            <GradientStop Color="#FFFFFFFF" Offset="-0.8"  x:Name="Stop2"/>
                            <GradientStop Color="#00FFFFFF" Offset="-0.6" x:Name="Stop3"/>
                        </LinearGradientBrush>
                    </TextBlock.OpacityMask>
                </TextBlock>
            </Grid>

            <StackPanel Grid.Row="1">
                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="White" ShadowDepth="1" Direction="130" BlurRadius="2" Opacity="0.5" />
                    </Border.Effect>

                    <TextBlock Text="Маска слова (например: К**Е*)"
                               FontFamily="Verdana" FontWeight="Bold" Foreground="#576F81"
                               FontSize="22" RenderOptions.EdgeMode="Aliased" Margin="0 40 0 0" Opacity="0.75">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0.85" Direction="300" BlurRadius="2" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
                <TextBox Name="TextBox1_Mask" Style="{StaticResource VFDTextBoxStyle}"
                         Width="160" Height="54" Margin="20" FontSize="40" TextAlignment="Center"
                         MaxLength="5" CharacterCasing="Upper"
                         PreviewTextInput="TextBox_Mask_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="White" ShadowDepth="1" Direction="170" BlurRadius="2" Opacity="0.5" />
                    </Border.Effect>

                    <TextBlock Text="Буквы, которых точно нет в слове
                               (например: ОФСЗИ)"
                           FontFamily="Verdana" FontWeight="Bold" Foreground="#576F81"
                           FontSize="22" RenderOptions.EdgeMode="Aliased" Margin="10 0"
                           TextWrapping="Wrap" TextAlignment="Center" Opacity="0.75">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0.85" Direction="0" BlurRadius="2" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
                <TextBox Name="TextBox2_ExcludedLetters"  Style="{StaticResource VFDTextBoxStyle}"
                         Grid.Row="2" Width="400" Height="44" Margin="20" FontSize="29"  CharacterCasing="Upper" MaxLength="20"
                         PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="White" ShadowDepth="1" Direction="200" BlurRadius="2" Opacity="0.5" />
                    </Border.Effect>

                    <TextBlock Text="Буквы не на своих местах
                               (например: РТА)"
                           FontFamily="Verdana" FontWeight="Bold" Foreground="#576F81"
                           FontSize="22" RenderOptions.EdgeMode="Aliased" Margin="10 0"
                           TextWrapping="Wrap" TextAlignment="Center" Opacity="0.75">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0.85" Direction="50" BlurRadius="2" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
                <TextBox Name="TextBox3_IncludedLetters"  Style="{StaticResource VFDTextBoxStyle}"
                         Grid.Row="3" Width="115" Height="44" Margin="20" FontSize="29" CharacterCasing="Upper" MaxLength="5"
                         PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" />
            </StackPanel>

            <Button Name="FilterButton" Style="{StaticResource ScratchedMetalButtonStyle}" 
                FontSize="28" Grid.Column="1" Grid.Row="1" 
                Grid.RowSpan="3" Margin="25 0 25 45" Click="Button_Click"/>

            <ListBox x:Name="FinalWordsList" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3"
                     Margin="30 15 50 60" Width="460" Height="490"
                     Style="{StaticResource VFDOutputListBoxStyle}" FontSize="38"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Grid>
    </Grid>
</Window>