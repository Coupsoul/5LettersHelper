<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard x:Key="LogoAnimation" RepeatBehavior="Forever" BeginTime="0:0:0.5">
        <!-- Вспышка -->
        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GlowEffect"
                               Storyboard.TargetProperty="BlurRadius"
                               Duration="0:0:2">
            <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
            <LinearDoubleKeyFrame Value="6" KeyTime="0:0:0.1"/>
            <LinearDoubleKeyFrame Value="2" KeyTime="0:0:0.3"/>
            <LinearDoubleKeyFrame Value="8" KeyTime="0:0:1.4"/>
            <LinearDoubleKeyFrame Value="2" KeyTime="0:0:1.5"/>
            <LinearDoubleKeyFrame Value="7" KeyTime="0:0:1.7"/>
            <LinearDoubleKeyFrame Value="14" KeyTime="0:0:2"/>
        </DoubleAnimationUsingKeyFrames>

        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GlowingText"
                               Storyboard.TargetProperty="Opacity"
                               Duration="0:0:2">
            <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
            <LinearDoubleKeyFrame Value="0.5" KeyTime="0:0:0.1"/>
            <LinearDoubleKeyFrame Value="0.1" KeyTime="0:0:0.3"/>
            <LinearDoubleKeyFrame Value="0.7" KeyTime="0:0:1.4"/>
            <LinearDoubleKeyFrame Value="0.1" KeyTime="0:0:1.5"/>
            <LinearDoubleKeyFrame Value="0.6" KeyTime="0:0:1.7"/>
            <LinearDoubleKeyFrame Value="0.9" KeyTime="0:0:2"/>
        </DoubleAnimationUsingKeyFrames>

        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="OuterGlowEffect"
                               Storyboard.TargetProperty="BlurRadius"
                               Duration="0:0:2">
            <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
            <LinearDoubleKeyFrame Value="28" KeyTime="0:0:0.1"/>
            <LinearDoubleKeyFrame Value="9" KeyTime="0:0:0.3"/>
            <LinearDoubleKeyFrame Value="33" KeyTime="0:0:1.4"/>
            <LinearDoubleKeyFrame Value="4" KeyTime="0:0:1.5"/>
            <LinearDoubleKeyFrame Value="30" KeyTime="0:0:1.7"/>
            <LinearDoubleKeyFrame Value="48" KeyTime="0:0:2"/>
        </DoubleAnimationUsingKeyFrames>

        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="OuterGlowingText"
                               Storyboard.TargetProperty="Opacity"
                               Duration="0:0:2">
            <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
            <LinearDoubleKeyFrame Value="0.5" KeyTime="0:0:0.1"/>
            <LinearDoubleKeyFrame Value="0.1" KeyTime="0:0:0.3"/>
            <LinearDoubleKeyFrame Value="0.7" KeyTime="0:0:1.4"/>
            <LinearDoubleKeyFrame Value="0.1" KeyTime="0:0:1.5"/>
            <LinearDoubleKeyFrame Value="0.7" KeyTime="0:0:1.7"/>
            <LinearDoubleKeyFrame Value="1" KeyTime="0:0:2"/>
        </DoubleAnimationUsingKeyFrames>

        <!-- Дыхание (12 секунд) -->
        <DoubleAnimation Storyboard.TargetName="GlowEffect"
                 Storyboard.TargetProperty="BlurRadius"
                 From="20" To="7"
                 Duration="0:0:2"
                 AutoReverse="True"
                 BeginTime="0:0:2"
                 RepeatBehavior="3x"/>

        <DoubleAnimation Storyboard.TargetName="GlowingText"
                 Storyboard.TargetProperty="Opacity"
                 From="1" To="0.6"
                 Duration="0:0:2"
                 AutoReverse="True"
                 BeginTime="0:0:2" 
                 RepeatBehavior="3x"/>

        <DoubleAnimation Storyboard.TargetName="OuterGlowEffect"
                 Storyboard.TargetProperty="BlurRadius"
                 From="48" To="30"
                 Duration="0:0:2"
                 AutoReverse="True"
                 BeginTime="0:0:2" 
                 RepeatBehavior="3x"/>

        <DoubleAnimation Storyboard.TargetName="OuterGlowingText"
                 Storyboard.TargetProperty="Opacity"
                 From="1" To="0.6"
                 Duration="0:0:2"
                 AutoReverse="True"
                 BeginTime="0:0:2" 
                 RepeatBehavior="3x"/>
    </Storyboard>

    <Storyboard x:Key="ShimmerAnimation" RepeatBehavior="Forever" BeginTime="0:0:7" Duration="0:0:14">
        <DoubleAnimation Storyboard.TargetName="Stop1"
                         Storyboard.TargetProperty="Offset"
                         From="-0.2" To="1.2"
                         Duration="0:0:3"
                         RepeatBehavior="1x"/>
        <DoubleAnimation Storyboard.TargetName="Stop2"
                         Storyboard.TargetProperty="Offset"
                         From="0.0" To="1.4"
                         Duration="0:0:3"
                         RepeatBehavior="1x"/>
        <DoubleAnimation Storyboard.TargetName="Stop3"
                         Storyboard.TargetProperty="Offset"
                         From="0.2" To="1.6"
                         Duration="0:0:3"
                         RepeatBehavior="1x"/>
    </Storyboard>

    <Style x:Key="ScratchedMetalButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="#CCCCCC" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="SocketBorder" Background="#273145" CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="0" Direction="315" BlurRadius="7" Opacity="0.6"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="SocketScale" ScaleX="1" ScaleY="1" CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform x:Name="SocketTranslate" X="0" Y="0" />
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>

                        <Grid x:Name="ContentContainer">
                            <Border x:Name="InnerContainer">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="ShadowDown" Color="Black" ShadowDepth="3.5" Direction="270" BlurRadius="3" Opacity="0.6"/>
                                </Border.Effect>

                                <Grid>
                                    <Border x:Name="ColorBorder" Background="#40454B" CornerRadius="5"/>
                                    <Border x:Name="TextureBorder" BorderBrush="#222" BorderThickness="2" CornerRadius="5">
                                        <Border.Background>
                                            <ImageBrush ImageSource="/Assets/cut_AdobeStock_1603006562_Preview.png" 
                                                    TileMode="Tile" Viewport="0,0,256,256" ViewportUnits="Absolute" Opacity="0.6"/>
                                        </Border.Background>
                                    </Border>
                                    <Border x:Name="OverlayBorder" Background="#FFFDC4" Opacity="0" CornerRadius="5"/>
                                    <TextBlock x:Name="Icon" Text="⇛" FontFamily="Arial" FontWeight="Bold" FontSize="34"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}">
                                        <TextBlock.Effect>
                                            <DropShadowEffect x:Name="IconGlow" Color="Gold" ShadowDepth="0" BlurRadius="28" Opacity="0"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <Grid.Effect>
                                <DropShadowEffect x:Name="ShadowUp" Color="Black" ShadowDepth="2.5" Direction="90" BlurRadius="3" Opacity="0.7"/>
                            </Grid.Effect>

                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform X="0" Y="0" />
                                </TransformGroup>
                            </Grid.RenderTransform>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OverlayBorder" Property="Opacity" Value="0.05"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ShadowDown" Storyboard.TargetProperty="ShadowDepth" To="1" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="ShadowUp" Storyboard.TargetProperty="ShadowDepth" To="0" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="0.98" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="0.995" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)" To="1" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)" To="1" Duration="0:0:0.1" />

                                        <DoubleAnimation Storyboard.TargetName="SocketScale" Storyboard.TargetProperty="ScaleY" To="0.995" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="SocketTranslate" Storyboard.TargetProperty="X" To="0.5" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ShadowDown" Storyboard.TargetProperty="ShadowDepth" To="3.5" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="ShadowUp" Storyboard.TargetProperty="ShadowDepth" To="2.5" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)" To="0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="ContentContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)" To="0" Duration="0:0:0.2" />

                                        <DoubleAnimation Storyboard.TargetName="SocketScale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" />
                                        <DoubleAnimation Storyboard.TargetName="SocketTranslate" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="Icon" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="#FFEB00" Duration="0:0:1" AutoReverse="True" FillBehavior="Stop">
                                        <ColorAnimation.EasingFunction>
                                            <PowerEase EasingMode="EaseOut" Power="4"/>
                                        </ColorAnimation.EasingFunction>
                                    </ColorAnimation>
                                    <DoubleAnimation Storyboard.TargetName="IconGlow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:1"
                                                  AutoReverse="True" FillBehavior="Stop"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="VFDTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontFamily" Value="/Fonts/#Liquid Crystal Display" />
        <Setter Property="Foreground" Value="#90E5B5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CaretBrush" Value="#90E5B5" />
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Grid.Effect>
                            <DropShadowEffect Color="#D4DBDB" ShadowDepth="3" Direction="190" BlurRadius="3" Opacity="0.8"/>
                        </Grid.Effect>
                        <Border x:Name="TextBoxBackgroundBorder" Background="#111514" CornerRadius="5" BorderBrush="#0A0C0B" BorderThickness="2">
                            <Border.Effect>
                                <DropShadowEffect Color="#1E2020" ShadowDepth="2" Direction="25" BlurRadius="4" Opacity="0.9"/>
                            </Border.Effect>
                        </Border>

                        <Border CornerRadius="3">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/vfd_grid_glass_256.png"
                                TileMode="Tile" Viewport="0,0,80,80" ViewportUnits="Absolute" 
                                Opacity="0.5"/>
                            </Border.Background>
                        </Border>

                        <ScrollViewer x:Name="PART_ContentHost" Background="Transparent">
                            <ScrollViewer.Effect>
                                <DropShadowEffect Color="#67FFA9" ShadowDepth="0" BlurRadius="12" Opacity="1"/>
                            </ScrollViewer.Effect>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="VFDOutputListBoxStyle" TargetType="ListBox">
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Foreground" Value="#90E5B5"/>
                    <Setter Property="FontFamily" Value="/Fonts/#Liquid Crystal Display"/>
                    <Setter Property="Padding" Value="14,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                    <ContentPresenter />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#67FFA9" ShadowDepth="0" BlurRadius="16" Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Grid>
                        <Grid.Effect>
                            <DropShadowEffect Color="#D4DBDB" ShadowDepth="4" Direction="325" BlurRadius="5" Opacity="0.8"/>
                        </Grid.Effect>
                        <Border Background="#111514" BorderBrush="#0A0C0B" BorderThickness="2" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="#1E2020" ShadowDepth="4" Direction="145" BlurRadius="5" Opacity="0.8"/>
                            </Border.Effect>
                        </Border>

                        <Border Name="TextureBorder" CornerRadius="5" BorderBrush="#0b1815" BorderThickness="1">
                            <Border.Background>
                                <ImageBrush x:Name="BackgroundTexture" ImageSource="/Assets/vfd_grid_glass_256.png"
                            TileMode="Tile" Viewport="55,0,78,78" ViewportUnits="Absolute"
                            Opacity="0.5"/>
                            </Border.Background>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>